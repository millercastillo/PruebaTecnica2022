@page "/peliculas/editar/{PeliculaId:int}"
@inject IRepositorio repositorio
@inject IMostrarMensajes mostrarMensaje
@inject NavigationManager navigationManager

<MudAppBar Color="Color.Primary" Fixed="false">
    <MudText Align="Align.Center" Typo="Typo.h4">Editar Pelicula</MudText>
</MudAppBar>

<FormularioPeliculas Pelicula="Pelicula" OnValidSubmit="Editar"></FormularioPeliculas>
}

@code {
    [Parameter] public int PeliculaId { get; set; }
    Pelicula Pelicula = new Pelicula();

    protected  override void OnInitialized()
    {
        Pelicula = new Pelicula() { Id = PeliculaId, Titulo = "Mi pelicula" };
    }
    private void Editar()
    {
        Console.WriteLine("Editando pelicula");
    }
}
